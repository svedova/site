{
  "name": "leo",
  "version": "1.8.4",
  "scripts": {
    "dev": "next",
    "build": "next build",
    "start": "next start",
    "test": "eslint .",
    "precommit": "lint-staged"
  },
  "license": "MIT",
  "repository": "leo/site",
  "babel": {
    "presets": [
      "next/babel"
    ],
    "plugins": [
      "markdown-in-js/babel"
    ]
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 8,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "extends": [
      "prettier",
      "prettier/react",
      "plugin:react/recommended"
    ],
    "rules": {
      "react/react-in-jsx-scope": 0,
      "react/display-name": 0,
      "react/prop-types": 0
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run test",
      "prettier --single-quote --no-semi --write",
      "git add"
    ]
  },
  "now": {
    "alias": "leo.im"
  },
  "dependencies": {
    "is-absolute-url": "2.1.0",
    "markdown-in-js": "1.1.3",
    "moment": "2.19.1",
    "next": "4.1.4",
    "nprogress": "0.2.0",
    "prop-types": "15.6.0",
    "react": "16.0.0",
    "react-codepen": "0.1.0",
    "react-dom": "16.0.0",
    "react-syntax-highlighter": "5.8.0",
    "react-tweet-embed": "1.0.8",
    "to-id": "1.0.5"
  },
  "devDependencies": {
    "babel-eslint": "8.0.1",
    "eslint": "4.10.0",
    "eslint-config-prettier": "2.6.0",
    "eslint-plugin-react": "7.4.0",
    "husky": "0.14.3",
    "lint-staged": "4.3.0",
    "prettier": "1.7.4",
    "xo": "0.18.2"
  }
}
